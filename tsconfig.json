{
  "compilerOptions": {
    "incremental": true,
    "rootDir": "src",
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}